// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  phone         String?
  address       String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  appointments  Appointment[]
  invoices      Invoice[]
}

model Doctor {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  specialty     String
  user          User?         @relation(fields: [userId], references: [id])
  userId        Int?          @unique
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  appointments  Appointment[]
  notes         AppointmentNote[]
  requestedLabs LabRequest[]  @relation("RequestedByDoctor")
}

model Appointment {
  id              Int       @id @default(autoincrement())
  patientId       Int
  patient         Patient   @relation(fields: [patientId], references: [id])
  doctorId        Int
  doctor          Doctor    @relation(fields: [doctorId], references: [id])
  appointmentDate DateTime
  reason          String?
  isPaid          Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  notes           AppointmentNote[]
  labRequests     LabRequest[]
  prescriptions   Prescription[]
}

model AppointmentNote {
  id            Int         @id @default(autoincrement())
  appointmentId Int
  appointment   Appointment @relation(fields: [appointmentId], references: [id])
  doctorId      Int
  doctor        Doctor      @relation(fields: [doctorId], references: [id])
  note          String
  createdAt     DateTime    @default(now())
}

model LabRequest {
  id                   Int         @id @default(autoincrement())
  appointmentId        Int
  appointment          Appointment @relation(fields: [appointmentId], references: [id])
  requestedByDoctorId  Int
  requestedByDoctor    Doctor      @relation("RequestedByDoctor", fields: [requestedByDoctorId], references: [id])
  priceId              Int
  price                Price       @relation(fields: [priceId], references: [id])
  isPaid               Boolean     @default(false)
  status               LabStatus   @default(REQUESTED)
  result               String?
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
}

enum LabStatus {
  REQUESTED
  COMPLETED
}

model Price {
  id        Int       @id @default(autoincrement())
  type      PriceType
  code      String
  name      String
  amount    Float
  active    Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  labRequests LabRequest[]

  @@unique([type, code])
}

enum PriceType {
  APPOINTMENT
  LAB
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(CASHIER)
  doctor    Doctor?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  CASHIER
  DOCTOR
  LABRATORY
  PHARMACY
  ACCOUNTANT
}

model Medication {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  inventory   Inventory?
  prescriptions Prescription[]
}

model Prescription {
  id            Int         @id @default(autoincrement())
  appointmentId Int
  appointment   Appointment @relation(fields: [appointmentId], references: [id])
  medicationId  Int
  medication    Medication  @relation(fields: [medicationId], references: [id])
  dosage        String
  frequency     String
  duration      String
  isFilled      Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Inventory {
  id           Int        @id @default(autoincrement())
  medicationId Int        @unique
  medication   Medication @relation(fields: [medicationId], references: [id])
  quantity     Int
  lastRestocked DateTime
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Invoice {
  id          Int           @id @default(autoincrement())
  patientId   Int
  patient     Patient       @relation(fields: [patientId], references: [id])
  totalAmount Float
  isPaid      Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  items       InvoiceItem[]
  payments    Payment[]
}

model InvoiceItem {
  id          Int      @id @default(autoincrement())
  invoiceId   Int
  invoice     Invoice  @relation(fields: [invoiceId], references: [id])
  description String
  amount      Float
  createdAt   DateTime @default(now())
}

model Payment {
  id            Int      @id @default(autoincrement())
  invoiceId     Int
  invoice       Invoice  @relation(fields: [invoiceId], references: [id])
  amount        Float
  transactionId String   @unique @default(cuid())
  paymentDate   DateTime @default(now())
  createdAt     DateTime @default(now())
}

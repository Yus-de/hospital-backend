// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  phone         String?
  address       String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  appointments  Appointment[]
}

model Doctor {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  specialty     String
  user          User?         @relation(fields: [userId], references: [id])
  userId        Int?          @unique
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  appointments  Appointment[]
  notes         AppointmentNote[]
  requestedLabs LabRequest[]  @relation("RequestedByDoctor")
}

model Appointment {
  id              Int       @id @default(autoincrement())
  patientId       Int
  patient         Patient   @relation(fields: [patientId], references: [id])
  doctorId        Int
  doctor          Doctor    @relation(fields: [doctorId], references: [id])
  appointmentDate DateTime
  reason          String?
  isPaid          Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  notes           AppointmentNote[]
  labRequests     LabRequest[]
}

model AppointmentNote {
  id            Int         @id @default(autoincrement())
  appointmentId Int
  appointment   Appointment @relation(fields: [appointmentId], references: [id])
  doctorId      Int
  doctor        Doctor      @relation(fields: [doctorId], references: [id])
  note          String
  createdAt     DateTime    @default(now())
}

model LabRequest {
  id                   Int         @id @default(autoincrement())
  appointmentId        Int
  appointment          Appointment @relation(fields: [appointmentId], references: [id])
  requestedByDoctorId  Int
  requestedByDoctor    Doctor      @relation("RequestedByDoctor", fields: [requestedByDoctorId], references: [id])
  priceId              Int
  price                Price       @relation(fields: [priceId], references: [id])
  isPaid               Boolean     @default(false)
  status               LabStatus   @default(REQUESTED)
  result               String?
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
}

enum LabStatus {
  REQUESTED
  COMPLETED
}

model Price {
  id        Int       @id @default(autoincrement())
  type      PriceType
  code      String
  name      String
  amount    Float
  active    Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  labRequests LabRequest[]

  @@unique([type, code])
}

enum PriceType {
  APPOINTMENT
  LAB
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(CASHIER)
  doctor    Doctor?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  CASHIER
  DOCTOR
  LABRATORY
  PHARMACY
  ACCOUNTANT
}


